<h1>Eat da Burger!</h1>

<div id="container">
  <div id="submitBurger">
    <h2>Submit a burger and devour it.</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour!</button>
            </form>

            {{!-- {{> burger/delete-burger}} --}}
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div id="devouredBurgers">
    <h2>Devoured burgers!</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form>

            {{!-- {{> burger/delete-burger}} --}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="addBurger">
  <h2>Submit a burger</h2>
  <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="ca">Burger name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Submit burger</button>
  </form>
</div>
